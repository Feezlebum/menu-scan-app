{
  "expo": {
    "name": "Menu Scan",
    "slug": "michi-menu-helper",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "menuscan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.menuscan.app",
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.background-delivery": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Use camera to scan restaurant menus.",
        "NSUserTrackingUsageDescription": "We use analytics to improve your experience.",
        "NSHealthShareUsageDescription": "MenuScan uses Apple Health to log your scanned meals and track nutrition.",
        "NSHealthUpdateUsageDescription": "MenuScan logs your scanned meals to Apple Health so you can track your nutrition."
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "POST_NOTIFICATIONS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Menu Scan to use your camera to scan menus."
        }
      ],
      "expo-notifications",
      "@sentry/react-native",
      "./plugins/withHealthKit",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
